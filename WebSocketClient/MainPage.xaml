<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebSocketClient.MainPage">

    <StackLayout Padding="10">
        <Entry x:Name="UserEntry" Placeholder="Enter your name"/>
        <Editor x:Name="MessageEditor" Placeholder="Enter your message" HeightRequest="100"/>
        <Button Text="Send" Clicked="OnSendButtonClicked"/>
        <ListView x:Name="MessagesListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
